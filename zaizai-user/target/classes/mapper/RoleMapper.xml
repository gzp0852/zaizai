<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shuaibi.zaizaiuser.mapper.RoleMapper">

    <resultMap id="roleMap" type="com.shuaibi.zaizaicommons.entity.user.Role">
        <id property="roleId" column="role_id"/>
        <result property="roleName" column="role_name"></result>
    </resultMap>

    <select id="queryRoleById" parameterType="int" resultMap="roleMap">
      SELECT * FROM zaizai_role WHERE role_id = #{id}
    </select>
</mapper>
